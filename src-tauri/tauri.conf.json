{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "auto-cursor",
    "version": "0.8.0",
    "identifier": "com.zhuanz.auto-cursor",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Wu Peng Fei Cursor Tools",
                "width": 1028,
                "height": 720,
                "resizable": true,
                "minimizable": true,
                "maximizable": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [
            "pyBuild/**/*"
        ]
    }
}